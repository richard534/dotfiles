" All searches will be case insensitive
set ignorecase
" search will be case sensitive if it contains an uppercase letter (and vice-versa)
set smartcase

" Integrate with system clipboard
set clipboard=unnamedplus,unnamed

" highlight all matches when searching
set hlsearch

" set leader key
let mapleader = '\'

" remap key to remove search highlight
nnoremap <Leader><space> :noh<cr>

" bind key to insert newline w/o entering insert mode
nmap <Leader>o o<Esc>
nmap <Leader>O O<Esc>

nmap <leader>g :action GotoDeclaration<cr>
nmap <leader>b :action Back<cr>
nmap <leader>f :action Forward<cr>

nmap <leader>t :action GotoFile<cr>
nmap <leader>c :action GotoClass<cr>
nmap <leader>ns :action GotoSymbol<cr>
nmap <leader>nm :action FileStructurePopup<cr>
nmap <leader>d :action ShowErrorDescription<cr>

