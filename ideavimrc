" All searches will be case insensitive
set ignorecase
" search will be case sensitive if it contains an uppercase letter (and vice-versa)
set smartcase

" Integrate with system clipboard
set clipboard=unnamedplus,unnamed

" highlight all matches when searching
set hlsearch

" disable bell sound
set visualbell

" set leader key
let mapleader = '\'

" remap key to remove search highlight
nnoremap <Leader><space> :noh<cr>

" bind key to insert newline w/o entering insert mode
nmap <Leader>o o<Esc>
nmap <Leader>O O<Esc>

" Goto - like key bindings
nmap gd :action GotoDeclaration<cr>
nmap gi :action GotoImplementation<cr>
nmap g[ :action Back<cr>
nmap g] :action Forward<cr>
nmap gf :action GotoFile<cr>
nmap gc :action GotoClass<cr>
nmap gs :action GotoSymbol<cr>
nmap gt :action TypeHierarchy<cr>

nmap <leader>f :action FileStructurePopup<cr>
nmap <leader>d :action Compare.SameVersion<cr>

